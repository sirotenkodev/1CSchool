СтрокаСкобок = "";
ВвестиСтроку(СтрокаСкобок, "Введите строку со скобками: ");

КоличествоОтк = 0;
КоличествоЗак = 0;

Для Шаг = 1 По СтрДлина(СтрокаСкобок) Цикл
	Если Сред(СтрокаСкобок, Шаг, 1) = "(" Тогда
		КоличествоОтк = КоличествоОтк + 1;
	ИначеЕсли Сред(СтрокаСкобок, Шаг, 1) = ")" Тогда
		КоличествоЗак = КоличествоЗак + 1;
	КонецЕсли; 
КонецЦикла;


Если КоличествоЗак <> КоличествоОтк Тогда
	Сообщить("Количество скобок неверно");
Иначе
	Сообщить("Количество скобок верно");
КонецЕсли;